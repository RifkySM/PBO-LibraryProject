<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="mainContainer"
            fx:controller="com.example.pbolibraryproject.controllers.MainController"
            stylesheets="@styles.css"
            styleClass="main-container">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="250" spacing="0">
            <!-- Header -->
            <VBox styleClass="sidebar-header" alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="30" bottom="30" left="20" right="20"/>
                </padding>
                <Label text="Library System" styleClass="app-title">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
            </VBox>

            <!-- Navigation Menu -->
            <VBox styleClass="nav-menu" spacing="5" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20" bottom="20" left="10" right="10"/>
                </padding>

                <Button fx:id="btnDashboard" text="Dashboard" onAction="#showDashboard"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15" bottom="15" left="20" right="20"/>
                    </padding>
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="btnMembers" text="Members" onAction="#showMembers"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15" bottom="15" left="20" right="20"/>
                    </padding>
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="btnBooks" text="Books" onAction="#showBooks"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15" bottom="15" left="20" right="20"/>
                    </padding>
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="btnLoans" text="Loans" onAction="#showLoans"
                        styleClass="nav-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15" bottom="15" left="20" right="20"/>
                    </padding>
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </VBox>

            <!-- Toggle Button at Bottom -->
            <VBox styleClass="sidebar-footer" alignment="CENTER">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <Button fx:id="btnToggle" text="â—€" onAction="#toggleSidebar"
                        styleClass="toggle-button" maxWidth="Infinity">
                    <padding>
                        <Insets top="10" bottom="10" left="10" right="10"/>
                    </padding>
                    <font>
                        <Font size="16"/>
                    </font>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <BorderPane fx:id="contentArea" styleClass="content-area">
            <!-- Header Bar -->
            <top>
                <HBox styleClass="header-bar" alignment="CENTER_LEFT" spacing="20">
                    <padding>
                        <Insets top="20" bottom="20" left="30" right="30"/>
                    </padding>
                    <Label fx:id="pageTitle" text="Dashboard" styleClass="page-title">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>
                </HBox>
            </top>

            <!-- Content Stack -->
            <center>
                <StackPane fx:id="contentStack" styleClass="content-stack">
                    <padding>
                        <Insets top="20" bottom="20" left="30" right="30"/>
                    </padding>
                </StackPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
