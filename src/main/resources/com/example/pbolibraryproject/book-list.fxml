<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pbolibraryproject.controllers.BookListController"
      spacing="20" styleClass="page-content">

    <!-- Action Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="+ Add Book" styleClass="primary-button" onAction="#addBook">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>
            <font>
                <Font size="13"/>
            </font>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search books..." styleClass="search-field" prefWidth="250">
            <padding>
                <Insets top="8" bottom="8" left="15" right="15"/>
            </padding>
        </TextField>
    </HBox>

    <!-- Books Table -->
    <TableView fx:id="booksTable" styleClass="data-table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colBookId" text="Book ID" prefWidth="80"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="250"/>
            <TableColumn fx:id="colAuthor" text="Author" prefWidth="180"/>
            <TableColumn fx:id="colIsbn" text="ISBN" prefWidth="130"/>
            <TableColumn fx:id="colPublisher" text="Publisher" prefWidth="150"/>
            <TableColumn fx:id="colYear" text="Year" prefWidth="80"/>
            <TableColumn fx:id="colStock" text="Current Stock" prefWidth="100"/>
            <TableColumn fx:id="colMaxStock" text="Max Stock" prefWidth="90"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Summary Bar -->
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="summary-bar">
        <padding>
            <Insets top="15" bottom="15" left="20" right="20"/>
        </padding>
        <Label fx:id="totalBooksLabel" text="Total Books: 0" styleClass="summary-text">
            <font>
                <Font size="13"/>
            </font>
        </Label>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="availableBooksLabel" text="Available: 0" styleClass="summary-text">
            <font>
                <Font size="13"/>
            </font>
        </Label>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="borrowedBooksLabel" text="Borrowed: 0" styleClass="summary-text">
            <font>
                <Font size="13"/>
            </font>
        </Label>
    </HBox>
</VBox>
