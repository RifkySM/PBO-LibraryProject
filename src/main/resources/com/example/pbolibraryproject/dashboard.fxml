<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pbolibraryproject.controllers.DashboardController"
      spacing="25" styleClass="page-content">

    <!-- Welcome Section -->
    <VBox spacing="10">
        <Label text="Welcome to Library Management System" styleClass="welcome-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Label fx:id="dateLabel" text="Today: January 24, 2026" styleClass="date-label">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </VBox>

    <!-- Statistics Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33" />
            <ColumnConstraints percentWidth="33.33" />
            <ColumnConstraints percentWidth="33.33" />
        </columnConstraints>

        <!-- Total Books Card -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="0">
            <padding>
                <Insets top="25" bottom="25" left="25" right="25"/>
            </padding>
            <Label text="Total Books" styleClass="card-title">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="totalBooksLabel" text="0" styleClass="card-value">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>
            <Separator />
            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Available" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="availableBooksLabel" text="0" styleClass="card-sub-value">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Borrowed" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="borrowedBooksLabel" text="0" styleClass="card-sub-value">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <!-- Total Members Card -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="1">
            <padding>
                <Insets top="25" bottom="25" left="25" right="25"/>
            </padding>
            <Label text="Total Members" styleClass="card-title">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="totalMembersLabel" text="0" styleClass="card-value">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>
            <Separator />
            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Active" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="activeMembersLabel" text="0" styleClass="card-sub-value">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Inactive" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="inactiveMembersLabel" text="0" styleClass="card-sub-value">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <!-- Total Loans Card -->
        <VBox styleClass="stat-card" spacing="15" GridPane.columnIndex="2">
            <padding>
                <Insets top="25" bottom="25" left="25" right="25"/>
            </padding>
            <Label text="Total Loans" styleClass="card-title">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
            <Label fx:id="totalLoansLabel" text="0" styleClass="card-value">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>
            <Separator />
            <HBox spacing="15">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Active" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="activeLoansLabel" text="0" styleClass="card-sub-value">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Overdue" styleClass="card-sub-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="overdueLoansLabel" text="0" styleClass="card-sub-value-alert">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </GridPane>

    <!-- Quick Actions -->
    <VBox spacing="15" styleClass="quick-actions-section">
        <Label text="Quick Actions" styleClass="section-title">
            <font>
                <Font name="System Bold" size="18"/>
            </font>
        </Label>
        <HBox spacing="15">
            <Button text="+ Add New Book" styleClass="primary-button" onAction="#navigateToBooks">
                <padding>
                    <Insets top="12" bottom="12" left="25" right="25"/>
                </padding>
                <font>
                    <Font size="14"/>
                </font>
            </Button>
            <Button text="+ Register Member" styleClass="primary-button" onAction="#navigateToMembers">
                <padding>
                    <Insets top="12" bottom="12" left="25" right="25"/>
                </padding>
                <font>
                    <Font size="14"/>
                </font>
            </Button>
            <Button text="+ New Loan" styleClass="primary-button" onAction="#navigateToLoans">
                <padding>
                    <Insets top="12" bottom="12" left="25" right="25"/>
                </padding>
                <font>
                    <Font size="14"/>
                </font>
            </Button>
        </HBox>
    </VBox>

    <!-- Recent Activity -->
    <VBox spacing="15" styleClass="recent-activity-section" VBox.vgrow="ALWAYS">
        <Label text="Recent Activity" styleClass="section-title">
            <font>
                <Font name="System Bold" size="18"/>
            </font>
        </Label>
        <TableView fx:id="recentActivityTable" styleClass="data-table">
            <columns>
                <TableColumn fx:id="colActivityType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colActivityDescription" text="Description" prefWidth="400"/>
                <TableColumn fx:id="colActivityDate" text="Date" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>
